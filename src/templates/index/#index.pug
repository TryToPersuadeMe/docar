doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  body 
//- mixins
include ~@/templates/_global/abstracts/mixins/button_default.pug
include ~@/templates/_global/abstracts/mixins/card_link.pug
include ~@/templates/_global/abstracts/mixins/searchInput.pug
include ~@/templates/_global/abstracts/mixins/card_withIcon.pug
mixin slide(title,text,imgNum)
  .dealProcess__slide.swiper-slide
    .dealProcess__img
      img(src=require(`@/assets/images/index/dealProcess/${imgNum}.jpg`), alt="#")
    .dealProcess__textWrapper 
      h6.dealProcess__slideTitle= title
      p.dealProcess__text=text



.wrapper
  .wrapper__100vh
    include ~@/templates/_global/layout/_header.pug

    section.firstScreen
      .container.container_small.firstScreen__container
        h1.firstScreen__title.sectionTitle.sectionTitle_white.sectionTitle_fw300 Лизинг <br> легковых автомобилей
        h4.firstScreen__subtitle Позваляет приобрести автомобили <br> быстро и без труда
        +defaultButton("button","firstScreen__button","Оставить заявку") 


  .catalog
    .catalog__container.container
      .catalog__row 
        +linkCard("Легковые автомобили",["С пробегом"],1)
        +linkCard("Легковые автомобили",[" "],2)
        +linkCard("Коммерческий транспорт",["Эконом класс","С пробегом","Премиум класс"],3)
        +linkCard("Водителям такси",["Эконом класс","С пробегом","Премиум класс"],4)
      +searchInput("catalog__search")
  
  section.advantages
    .container.advantages__container 
      h2.sectionTitle.sectionTitle_centered.sectionTitle_defaultMarginBottom Сотрудничая с нами вы получаете ряд преимуществ 
      .advantages__row
        .advantages__img 
          img(src=require("@/assets/images/index/advantages/1.jpg"), alt="#")
        ol.advantages__ol
          li.advantages__li Предварительный анализ отчётности, оценка возможности получения финансирования
          li.advantages__li Получение практических рекомендации для повышения вероятности одобрения вашей заявки
          li.advantages__li Экономия времени на сбор предложений лизинговых компаний и выбор лучших условий лизинга
          li.advantages__li Защита ваших интересов при согласовании лизинговой сделки

  section.features
    .container.features__container 
      h2.sectionTitle.sectionTitle_centered.sectionTitle_defaultMarginBottom Чем лизинг лучше кредита
      .features__boxesWrapper
        +card_WithIcon("Не нужно подтверждение дохода", 1)
        +card_WithIcon("Не важна кредитная история", 2)
        +card_WithIcon("Минимальный пакет документов", 3)
        +card_WithIcon("Решение за один день", 4)
        +card_WithIcon("Автомобили с пробегом", 5)
        +card_WithIcon("Меньше первоначальный взнос", 6)
        +card_WithIcon("Любое гражданство", 7)
    
    .getCarSlider
      .getCarSlider__container.container.swiper-container 
        .getCarSlider__wrapper.swiper-wrapper
          .getCarSlider__slide.swiper-slide
            img(src=require("@/assets/images/index/getCarSlider/1.png"), alt="#")        
          .getCarSlider__slide.swiper-slide
            img(src=require("@/assets/images/index/getCarSlider/1.png"), alt="#")
          .getCarSlider__slide.swiper-slide
            img(src=require("@/assets/images/index/getCarSlider/1.png"), alt="#")
        button.getCarSlider__arrow.getCarSlider__arrow_next
          img(src=require("@/assets/_global/icons/arrow_angle.svg"), alt="arrow")
        button.getCarSlider__arrow.getCarSlider__arrow_prev
          img(src=require("@/assets/_global/icons/arrow_angle.svg"), alt="arrow")
        +defaultButton("button","getCarSlider__button","Подобрать автомобиль") 




    section.calculation
        include ~@/templates/_global/layout/calculator.pug

    section.dealProcess
      .container.dealProcess__container
        h2.sectionTitle.sectionTitle_centered.sectionTitle_defaultMarginBottom Как происходит сделка лизинга
      .dealProcess__slider.swiper-container 
        .swiper-wrapper 
          +slide("Выбор транспорта и поставщика","Выбираете желаемый автомобиль и поставщика",1)
          +slide("Оставляете заявку","Оставляете заявку на консультацию на этом сайте",2)
          +slide("Лучшие условия","Мы подбираем для вас лучшее предложение среди лизинговых компаний под ваши условия (ваш запрос)",3)
          +slide("Заключение договора","Вы собираете документы и заключаете договор лизинга",4)
          +slide("Передача автомобиля","Вы получаете ключи от желаемого автомобиля",5)
          +slide("Внесение платежей","Вы вносите авансовый и ежемесячные платежи",6)
          +slide("Выкуп автомобиля","Вы выкупаете автомобиль в собственность!",7)

          .dealProcess__arrowsWrapper
            button.dealProcess__arrow.dealProcess__arrow_prev
              img(src=require("@/assets/_global/icons/arrow_angle.svg"), alt="arrow")

            button.dealProcess__arrow.dealProcess__arrow_next
              img(src=require("@/assets/_global/icons/arrow_angle.svg"), alt="arrow")


        .customPaginationWrapper
          .container.customPaginationWrapper__container
            .dealProcess__pagination
            .customProgressBar
                .customProgressBar__fillLine

    section.FAQ
      .FAQ__container.container 
        h2.sectionTitle.sectionTitle_centered.sectionTitle_defaultMarginBottom Частые вопросы
        .FAQ__column 
          .toggleTextItem
            h6.toggleTextItem__title Что такое лизинг?
              span.toggleTextItem__arrow
                img(src=require("@/assets/_global/icons/arrow_angle_blue.svg"), alt="arrow")
            .toggleTextItem__dropdown
              p.toggleTextItem__text Лизинг (to lease — сдать в аренду, англ.) — это вид финансовых услуг, суть которого заключается в финансировании приобретения основных фондов посредством приобретения компанией-лизингодателем имущества у поставщика и передачи его в долгосрочную аренду клиенту-лизингополучателю (юридическому лицу) с последующим выкупом.
              p.toggleTextItem__text Финансовую аренду (лизинг) регулируют Гражданский кодекс РФ (ст. 665, 666), Федеральный закон от 29 октября 1998 года «О финансовой аренде (лизинге)», а также многочисленные подзаконные акты.

    include ~@/templates/_global/layout/_footer.pug
